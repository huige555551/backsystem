//		}
		List<Object> groupCourseIds=findGroupCourseIdsListByGroupId(groupId);
		//删除收藏
		favService.deleteBySourceIds(groupCourseIds);
		//删除分享
		shareService.deleteBySourceIds(groupCourseIds);
		//删除学习
