	/**
	 * 
	 * @Title: getBgUrl
	 * @Description: 获取附件的furl
	 * @param tagNames
	 * @param itemType
	 * @param count
	 * @return
	 * @throws XueWenServiceException String
	 * @throws
	 */
	private String getBgUrl(String tagNames,String itemType,int count) throws XueWenServiceException{
		List<String> idList=tagService.findItemIds(Config.YXTDOMAIN, tagNames, itemType, count);
		String url="";
		if(idList.size()!=0){
			String id=idList.get(0);
			AttachFile attachFile=attachFileService.viewAttachFileById(id);
			url=attachFile.getFurl();
		}
		return url;
		
	}

	/**
	 * 
	 * @Title: worthGroups
	 * @Description: 值得加入的组
	 * @return List<XueWenGroup>
	 * @throws
	 */
	public List<JSONObject> worthGroups(int num) {
		QueryModel dm = new QueryModel();
		dm.setSort("groupMemberNumber");
		dm.setMode("DESC");
		dm.setN(0);
		dm.setS(num);
		Pageable pageable = PageRequestTools.pageRequesMake(dm);
		List<SearchGroupVo> groups = searchGroupService.findAll(pageable).getContent();
		//瘦身
		List<JSONObject> jsonObjects = new ArrayList<JSONObject>();
		String[] includeKey = {"groupId","groupLogoUrl","groupName","groupMemberNumber","groupIntro"};
		for (SearchGroupVo searchGroupVo : groups) {
			jsonObjects.add(YXTJSONHelper.getInObjectAttrJsonObject(searchGroupVo, new HashMap<String, Object>(), includeKey));
		}
		return jsonObjects;
	}
	
