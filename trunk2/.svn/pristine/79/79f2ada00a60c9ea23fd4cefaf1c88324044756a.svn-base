	public void update(NewChapter newChapter) throws XueWenServiceException{
		if (tools.StringUtil.isBlank(newChapter.getId())) {
			throw new  XueWenServiceException(Config.STATUS_201,"章节ID不可以空",null);
		}
		NewChapter chapter=findOne(newChapter.getId());
		chapter.setTitle(newChapter.getTitle());
		chapter.setOrder(newChapter.getOrder());
		save(chapter);
	}

